{
    "compilerOptions": {
        "target": "es2022",
        "module": "CommonJS",
        "outDir": "dist",
        "strict": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
